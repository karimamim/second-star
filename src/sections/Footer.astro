	{ text: "About Us", path: "/about" },
	{ text: "Services", path: "/services" },
	{ text: "Portfolio", path: "/portfolio" },
	{ text: "Contact", path: "/contact" },
];

const services = [
	"Web Design",
	"Web Develpoment",
	"Product Management",
	"Marketing",
	"Graphic Design",
];
