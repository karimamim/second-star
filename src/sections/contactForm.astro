<form class="w-full">
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
			<label
				class="block tracking-wide text-dark font-light mb-2"
				for="grid-first-name"
			>
				Your Name
			</label>
			<input
				class="appearance-none block w-full border border-mashWhite rounded py-3 px-4 mb-3 leading-tight focus:outline focus:outline-blue focus:outline-1"
				id="grid-first-name"
				type="text"
			/>
		</div>
		<div class="w-full md:w-1/2 px-3">
			<label
				class="block tracking-wide text-dark font-light mb-2"
				for="grid-last-name"
			>
				Your Email
			</label>
			<input
				class="appearance-none block w-full border border-mashWhite rounded py-3 px-4 mb-3 leading-tight focus:outline focus:outline-blue focus:outline-1"
				id="grid-last-name"
				type="email"
			/>
		</div>
	</div>
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
			<label
				class="block tracking-wide text-dark font-light mb-2"
				for="grid-password"
			>
				Subject
			</label>
			<input
				class="appearance-none block w-full border border-mashWhite rounded py-3 px-4 mb-3 leading-tight focus:outline focus:outline-blue focus:outline-1"
			/>
		</div>
	</div>
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
			<label
				class="block tracking-wide text-dark font-light mb-2"
				for="grid-password"
			>
				Message
			</label>
			<textarea
				class="appearance-none block h-28 md:h-52 w-full border border-mashWhite rounded py-3 px-4 mb-3 leading-tight focus:outline focus:outline-blue focus:outline-1"
			></textarea>
		</div>
	</div>
	<div class="flex flex-wrap justify-center -mx-3 mb-6">
		<button
			type="submit"
			class="bg-blue py-4 px-10 text-white rounded-full font-openSans"
			>Send Message</button
		>
	</div>
</form>
